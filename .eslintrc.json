{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "class-methods-use-this": "warn",
    "comma-dangle": "warn",
    "consistent-return": "warn",
    "curly": "warn",
    "implicit-arrow-linebreak": "off",
    "linebreak-style": "off",
    "no-console": "off",
    "no-eval": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off",
    "nonblock-statement-body-position": "warn",
    "object-curly-newline": "off"
  }
}
