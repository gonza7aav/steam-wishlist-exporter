{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "comma-dangle": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never"
      }
    ],
    "linebreak-style": "off",
    "lines-between-class-members": "off",
    "no-console": "off",
    "no-eval": "off",
    "no-restricted-syntax": "off"
  },
  "ignorePatterns": ["node_modules/*", "lib/*"]
}
